<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#2F4F70">

    <Button
            android:text="Moje przepisy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/my_recippes_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/add_recipe_button" android:background="#8BC34A"
            android:backgroundTint="#8BC34A" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.39" android:textColor="#FFFFFF"/>
    <Button
            android:text="Dodaj przepis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/add_recipe_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#8BC34A"
            android:backgroundTint="#8BC34A" app:layout_constraintHorizontal_bias="0.0"
            android:textColor="#FFFFFF" android:layout_marginBottom="148dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintVertical_bias="1.0"/>
    <ImageView
            android:layout_width="1312dp"
            android:layout_height="860dp" app:srcCompat="@drawable/home_background"
            android:id="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.75" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Home Chef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:textSize="48sp" android:textColor="#FFFFFF" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.063" android:fontFamily="cursive"/>

</androidx.constraintlayout.widget.ConstraintLayout>